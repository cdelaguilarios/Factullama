<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <mvc:resources mapping="/admin/css/**" location="/WEB-INF/public/css/" />
    <mvc:resources mapping="/admin/js/**" location="/WEB-INF/public/js/" />
    <mvc:resources mapping="/admin/img/**" location="/WEB-INF/public/img/" />
    <mvc:resources mapping="/admin/fonts/**" location="/WEB-INF/public/fonts/" />

    <mvc:resources mapping="/css/**" location="/WEB-INF/public/sb/css/" />
    <mvc:resources mapping="/css/**" location="/WEB-INF/public/sb/font-awesome/" />
    <mvc:resources mapping="/js/**" location="/WEB-INF/public/sb/fonts" />
    <mvc:resources mapping="/img/**" location="/WEB-INF/public/sb/js/" />

    <import resource="factullamita-thymeleaf.xml" />

</beans>